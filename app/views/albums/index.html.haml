.pull-right
  %button.btn.btn-link{data: {toggle: 'modal', target: '#create-album'}} Create New Album
%ol.breadcrumb
  %li.active Albums

#create-album.modal.fade{tabindex: '-1', role: 'dialog'}
  = render 'albums/new'

.masonry
  - @albums.each do |album|
    .thumbnail
      = link_to album do
        - if album.photos.any?
          = image_tag album.photos.first.source.url 
        - else
          = image_tag ''
      %hr
      .caption
        = link_to album, class: 'btn btn-primary pull-right' do
          Photos
          %span.badge= album.photos.count
        %h2.h4= album.title
