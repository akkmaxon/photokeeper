%header
  %nav.navbar.navbar-inverse.row
    .navbar-header
      %button.navbar-toggle.collapsed{data: {toggle: 'collapse', target: '#menu'},
        'aria-expanded' => 'false'}
        %span.sr-only Toggle View Profile
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: root_url} Photokeeper
      = form_tag({controller: 'users', action: 'index'}, method: 'get') do
        .input-group{style: 'width: 300px'}
          = text_field_tag :search, nil, placeholder: 'Search people', class: 'form-control'
          .input-group-btn
            = submit_tag 'Find', class: 'btn btn-default'
