- if notice.present?
  .alert.alert-success
    %button.close{data: {dismiss: 'alert'}, 'aria-label' => 'Close'} &times;
    = notice
- elsif alert.present?
  .alert.alert-danger
    %button.close{data: {dismiss: 'alert'}, 'aria-label' => 'Close'} &times;
    = alert
- elsif not user_signed_in?
  %p{style: 'padding: 30px'}
