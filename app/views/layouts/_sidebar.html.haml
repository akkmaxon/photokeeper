#menu.collapse.navbar-collapse
  %aside.panel.panel-default
    .panel-body.text-center
      = render partial: 'users/user', object: current_user
      .btn-group.btn-group-xs
        %a.btn.btn-default{href: followers_url}
          Followers
          %span.badge= current_user.followers.count
        %a.btn.btn-default{href: following_url}
          Following
          %span.badge= current_user.following.count
      %ul.nav.nav-pills.nav-stacked
        %li{class: controller_name == 'feed' ? 'active' : ''}
          %a{href: feed_url} Feed
        %li{class: controller_name == 'albums' ? 'active' : ''}
          = link_to albums_url do
            Albums
            %span.badge= current_user.albums.count
        %li{class: controller_name == 'registrations' ? 'active' : ''}
          %a{href: edit_user_registration_url} Settings
        %hr
        %li
          %a{href: destroy_user_session_path, data: {method: 'delete'}} Sign Out
