.pull-right
  %button.btn.btn-link{data: {toggle: 'modal', target: '#edit-photo'}} Edit Photo
  %button.btn.btn-link{data: {toggle: 'modal', target: '#delete-photo'}} Delete Photo
%ol.breadcrumb
  %li
    %a{href: albums_url} Albums
  %li
    %a{href: album_path(@photo.album)}= @photo.album.title
  %li.active= @photo.title

/ modals
#edit-photo.modal.fade{tabindex: '-1', role: 'dialog'}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{data: {dismiss: 'modal'}, 'aria-label' => 'Close'}
          %span{'aria-hidden' => 'true'} &times;
        %h1.h3 Edit Photo
      .modal-body
        = simple_form_for(current_photo, url: album_photo_path(@photo.album, @photo), method: :patch) do |f|
          = f.input :title, class: 'form-control'
          = f.input :caption, class: 'form-control'
          .modal-footer
            = f.button :submit

#delete-photo.modal.fade{tabindex: '-1', role: 'dialog'}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{data: {dismiss: 'modal'}, 'aria-label' => 'Close'}
          %span{'aria-hidden' => 'true'} &times;
        %h1.h3 Delete Photo
      .modal-body.text-center
        %h2.h3 This action will delete '#{@photo.title}'.
        %h2.h3.text-uppercase Are you sure???
      .modal-footer
        %button.btn.btn-default{data: {dismiss: 'modal'}} Really? Then NO!
        = link_to 'Delete', album_photo_path(@photo.album, @photo), method: :delete, class: 'btn btn-danger'
/ end of modals
.thumbnail
  = gravatar_for current_user
  .caption
    %h2.h4= @photo.title
    %p= @photo.caption
    %small.text-uppercase Album: #{@photo.album.title}
    %small.text-uppercase created_at: #{@photo.created_at}
    %small.text-uppercase updated_at: #{@photo.updated_at}
