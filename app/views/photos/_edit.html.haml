.modal-dialog
  .modal-content
    .modal-header
      %button.close{data: {dismiss: 'modal'}, 'aria-label' => 'Close'}
        %span{'aria-hidden' => 'true'} &times;
      %h1.h3 Edit Photo
    .modal-body
      = simple_form_for(@photo, url: album_photo_path(@photo.album, @photo), method: :patch, html: { multipart: true }) do |f|
        = f.input :title, class: 'form-control'
        = f.input :source, as: :file
        = f.input :caption, class: 'form-control'
        .modal-footer
          = f.button :submit

