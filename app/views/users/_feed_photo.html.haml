.feed_photo
  .panel.panel-primary
    .panel-heading
      = time_ago_in_words(photo.updated_at)
      ago:
      = author(photo.user)
      - if photo.updated_at > photo.created_at
        updated photo
      - else
        added new photo
    .panel-body
      .row
        .col-xs-6
          = link_to album_photo_url(snake_case(photo.user.full_name), photo.album, photo) do
            = image_tag photo.source.thumb.url, style: 'max-width: 100%'
        .col-xs-6
          %h2.h4= photo.title
          %p= photo.caption
          %hr
          %p
            Album: 
            = link_to album_url(snake_case(photo.user.full_name), photo.album) do
              = photo.album.title
          %p= pluralize(photo.comments.count, 'comment')
