.panel.panel-info
  .panel-heading
    = time_ago_in_words(album.updated_at)
    ago:
    = author(album.user)
    - if album.updated_at > album.created_at
      updated album
    - else
      created new album
  .panel-body
    .row
      .col-xs-6
        = link_to album_url(snake_case(album.user.full_name), album) do
          - url = if album.photos.empty? then '' else album.photos.first.source.url end
          = image_tag url, style: 'width: 100%'
      .col-xs-6
        %h2.h4= album.title
        %hr
        .pull-right
          = pluralize(album.photos.count, 'photo')
