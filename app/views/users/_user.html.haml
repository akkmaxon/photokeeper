.thumbnail
  = avatar_for user
  .caption
    = user.full_name
    - unless user == current_user
      %br
      = link_to albums_url(snake_case(user.full_name)), class: 'btn btn-primary pull-right' do
        Albums
        %span.badge= user.albums.count
      = link_to 'Feed', feed_url(snake_case(user.full_name)), class: 'btn btn-link'
